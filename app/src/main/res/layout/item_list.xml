<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_Ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã tour"
            android:textSize="24dp"
            android:textColor="#254a69"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_Ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tour"
            android:textSize="18dp"
            android:textColor="#254a69"/>
        <TextView
            android:id="@+id/txt_Mota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="18dp"
            android:textColor="#254a69"/>
        <TextView
            android:id="@+id/txt_Soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá sản phẩm"
            android:textSize="18dp"
            android:textColor="#254a69"/>
        <TextView
            android:id="@+id/txt_Lichtrinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch trình"
            android:textSize="18dp"
            android:textColor="#254a69"/>
        <TextView
            android:id="@+id/txt_Gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá sản phẩm"
            android:textSize="18dp"
            android:textColor="#254a69"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imv_Tour"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/img"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/imv_Delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginStart="5dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"/>

</LinearLayout>